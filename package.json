{
  "name": "resistencias-app",
  "version": "2.2.0",
  "private": true,
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "dev": "next dev -H 0.0.0.0 -p 8080",
    "vercel-build": "npm install --legacy-peer-deps && npm run build",
    "dev:https": "local-ssl-proxy --source 8443 --target 8080 --cert certs/localhost.crt --key certs/localhost.key",
    "dev:all": "concurrently \"npm run dev\" \"npm run dev:https\"",
    "build": "next build",
    "build:spa": "next build && npm run postbuild",
    "build:pwa": "npm run build:spa && echo 'âœ“ SPA + PWA build completada en carpeta out/'",
    "build:vercel": "next build",
    "postbuild": "node scripts/post-build.js",
    "start": "npx serve out -s -p ${PORT:-8080}",
    "start:spa": "npx serve out -p 8080",
    "start:production": "npx serve out -s -p 80",
    "lint": "next lint",
    "generate-cert": "openssl req -x509 -newkey rsa:2048 -keyout certs/localhost.key -out certs/localhost.crt -days 365 -nodes -subj '/CN=localhost'",
    "generate-icons": "node scripts/generate-pwa-icons.js",
    "pwa:check": "node scripts/check-pwa.js",
    "migrate-photo-urls": "npx tsx scripts/migrate-photo-urls.ts"
  },
  "dependencies": {
    "@azure/msal-browser": "^3.11.1",
    "@azure/msal-react": "^2.0.21",
    "@types/node": "^20.10.6",
    "@types/react": "^18.3.26",
    "@types/react-dom": "^18.3.7",
    "date-fns": "^3.0.6",
    "dotenv": "^17.2.3",
    "exceljs": "^4.4.0",
    "firebase": "^10.7.1",
    "lucide-react": "^0.263.1",
    "next": "^15.5.5",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "typescript": "^5.3.3",
    "xlsx-js-style": "^1.2.0"
  },
  "devDependencies": {
    "@capacitor/android": "^7.4.3",
    "@capacitor/cli": "^7.4.3",
    "@capacitor/core": "^7.4.3",
    "concurrently": "^9.2.1",
    "eslint": "^8.56.0",
    "eslint-config-next": "14.0.4",
    "local-ssl-proxy": "^2.0.5",
    "sharp": "^0.34.4",
    "tsx": "^4.20.6"
  },
  "overrides": {
    "@azure/msal-react": {
      "react": "$react",
      "react-dom": "$react-dom"
    },
    "@azure/msal-browser": {
      "react": "$react",
      "react-dom": "$react-dom"
    }
  },
  "resolutions": {
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "@types/react": "^18.3.26",
    "@types/react-dom": "^18.3.7"
  },
  "npmConfig": {
    "legacy-peer-deps": true
  }
}
