  const [unitSaveProgress, setUnitSaveProgress] = useState<UnitSaveProgress | null>(null);

  // üîÑ Funci√≥n para detectar orientaci√≥n EXIF de la imagen
  const getImageOrientation = (file: File): Promise<number> => {
    return new Promise((resolve) => {
      const reader = new FileReader();
      reader.onload = (e) => {
        const arrayBuffer = e.target?.result as ArrayBuffer;
        const dataView = new DataView(arrayBuffer);
        
        // Verificar si es JPEG
        if (dataView.getUint16(0) !== 0xFFD8) {
          resolve(1); // No es JPEG, orientaci√≥n normal
          return;
        }
        
        let offset = 2;
        let marker;
        
        while (offset < dataView.byteLength) {
          marker = dataView.getUint16(offset);
          offset += 2;
          
          if (marker === 0xFFE1) { // EXIF marker
            const exifLength = dataView.getUint16(offset);
            const exifData = new DataView(arrayBuffer, offset + 2, exifLength - 2);
            
            // Buscar orientaci√≥n en EXIF
            try {
              const littleEndian = exifData.getUint16(6) === 0x4949;
              const orientationOffset = 14;
              
              for (let i = orientationOffset; i < exifData.byteLength - 12; i += 12) {
                if (exifData.getUint16(i, littleEndian) === 0x0112) { // Orientation tag
                  const orientation = exifData.getUint16(i + 8, littleEndian);
                  resolve(orientation);
                  return;
                }
              }
            } catch (error) {
              // Error leyendo EXIF, usar orientaci√≥n normal
            }
            break;
          } else {
            offset += dataView.getUint16(offset);
          }
        }
        
        resolve(1); // Orientaci√≥n normal por defecto
      };
      reader.readAsArrayBuffer(file);
    });
  };

  // üîÑ Funci√≥n para convertir orientaci√≥n EXIF a grados
  const exifOrientationToRotation = (orientation: number): number => {
    switch (orientation) {
      case 3: return 180;
      case 6: return 90;
      case 8: return 270;
      default: return 0;
    }
  };

  const handlePhotoUpload = async (sampleId: string, file: File) => {
    try {
      // Marcar como subiendo
      setUploadingPhotos(prev => new Set([...prev, sampleId]));

      // Obtener informaci√≥n de la muestra actual
      const currentSample = editedTest.samples.find(s => s.id === sampleId);
      
      // Limpiar URL anterior si existe (para evitar cache del navegador)
      if (currentSample?.photoUrl) {
        console.log('üîÑ Reemplazando foto anterior...');
        // Limpiar el blob URL anterior si existe para evitar memory leaks
        if (currentSample.photoUrl.startsWith('blob:')) {
          URL.revokeObjectURL(currentSample.photoUrl);
        }
      }

      // Obtener el timeSlot de la muestra para nombrar la foto
      const timeSlot = currentSample?.timeSlot ?? 0;

      // Crear vista previa temporal mientras sube
      const tempUrl = URL.createObjectURL(file);
      
      // üîÑ Detectar orientaci√≥n autom√°ticamente
      const orientation = await getImageOrientation(file);
      const autoRotation = exifOrientationToRotation(orientation);
      
      setEditedTest(prev => ({
        ...prev,
        samples: prev.samples.map(s => s.id === sampleId ? { 
          ...s, 
          photoUrl: tempUrl, 
          isUploading: true,
          rotation: autoRotation // Aplicar rotaci√≥n autom√°tica
        } : s)
      }));

      // Subir foto usando API de Drive
      const formData = new FormData();
      formData.append('file', file);
      formData.append('fileName', `${editedTest.lotNumber}_hora${timeSlot}_${Date.now()}.${file.name.split('.').pop()}`);
      formData.append('lotNumber', editedTest.lotNumber);
      formData.append('testType', editedTest.testType);

      setUploadProgress(prev => ({
        ...prev,
        [sampleId]: { stage: 'uploading', progress: 50, message: 'Subiendo foto...' }
      }));

      const response = await fetch('/api/drive/photo', {
        method: 'POST',
        body: formData
      });

      if (!response.ok) {
        throw new Error('Error subiendo foto a Google Drive');
      }

      const { fileUrl } = await response.json();
      const result = { success: true, photoUrl: fileUrl, retryCount: 0 };

      if (result.success && result.photoUrl) {
        // Limpiar errores de imagen si exist√≠an
        setImageErrors(prev => {
          const newSet = new Set(prev);
          newSet.delete(sampleId);
          return newSet;
        });
        
        // Limpiar el blob URL temporal antes de actualizar
        if (currentSample?.photoUrl && currentSample.photoUrl.startsWith('blob:')) {
          URL.revokeObjectURL(currentSample.photoUrl);
        }
        
        // Validar que la URL de OneDrive es v√°lida
        if (!result.photoUrl || result.photoUrl.trim() === '') {
          throw new Error('URL de foto inv√°lida recibida de OneDrive');
        }
        
        // Actualizar con URL real y limpiar estado de carga, mantener rotaci√≥n autom√°tica
        const updatedTest = {
          ...editedTest,
          samples: editedTest.samples.map(s => s.id === sampleId ? { 
            ...s, 
            photoUrl: result.photoUrl, 
            isUploading: false,
            rotation: currentSample?.rotation || autoRotation // Mantener la rotaci√≥n aplicada
          } : s)
        };

        setEditedTest(updatedTest);

        // üî• AUTO-GUARDAR con sistema dual inmediatamente despu√©s de subir foto
        try {
          if (saveTestFn) {
            await saveTestFn(updatedTest);
          } else {
            await saveTestToFirestore(updatedTest);
          }
        } catch (saveError: any) {
          // No mostrar error al usuario para no interrumpir el flujo
          console.warn('‚ö†Ô∏è Error guardando despu√©s de subida exitosa:', saveError);
        }

        // Limpiar progreso
        setUploadProgress(prev => {
          const newProgress = { ...prev };
          delete newProgress[sampleId];
          return newProgress;
        });

        // Mostrar notificaci√≥n exitosa con info de compresi√≥n si aplica
        const compressionInfo = result.compressedSize && result.originalSize && result.compressedSize < result.originalSize
          ? ` (comprimida: ${Math.round((result.originalSize - result.compressedSize) / 1024)}KB ahorrados)`
          : '';

        console.log(`‚úÖ Foto subida exitosamente${compressionInfo}`);

      } else {
        // La subida fall√≥ despu√©s de todos los reintentos
        throw new Error(result.error || 'Error desconocido en la subida');
      }

      // Limpiar URL temporal
      URL.revokeObjectURL(tempUrl);

    } catch (error: any) {
      console.error('‚ùå Error en subida de foto:', error);

      // Limpiar estado de carga en caso de error
      setEditedTest(prev => ({
        ...prev,
        samples: prev.samples.map(s => s.id === sampleId ? { ...s, photoUrl: '', isUploading: false } : s)
      }));

      // Limpiar progreso
      setUploadProgress(prev => {
        const newProgress = { ...prev };
        delete newProgress[sampleId];
        return newProgress;
      });

      // Mostrar mensaje de error m√°s espec√≠fico
      if (error.message.includes("cuenta activa") || error.message.includes("inicia sesi√≥n")) {
        alert("‚ùå Sesi√≥n expirada. Por favor, recarga la p√°gina para volver a iniciar sesi√≥n.");
      } else if (error.message.includes("MSAL no est√° disponible")) {
        alert("‚ùå Error de autenticaci√≥n. Por favor, recarga la p√°gina.");
      } else if (error.message.includes("Sin conexi√≥n")) {
        alert("‚ùå Sin conexi√≥n a internet. La foto se guardar√° localmente y se subir√° cuando recuperes la conexi√≥n.");
      } else {
        alert(`‚ùå Error al subir foto: ${error.message}\n\nLa foto se intentar√° subir autom√°ticamente cuando sea posible.`);
      }
    } finally {
      // Limpiar estado de carga
      setUploadingPhotos(prev => {
