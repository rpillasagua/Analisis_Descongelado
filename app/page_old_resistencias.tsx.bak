  const [tests, setTests] = useState<ResistanceTest[]>([]);
  const [allTests, setAllTests] = useState<ResistanceTest[]>([]); // Cache de TODOS los tests
  const [isLoading, setIsLoading] = useState(true);
  const [showAll, setShowAll] = useState(false);
  
  // Modo fijo: siempre MATERIA_PRIMA
  const workMode: TestType = 'MATERIA_PRIMA';
  
  // ‚úÖ NUEVO: Infinite scroll - Mostrar 30 inicialmente
  const [visibleCount, setVisibleCount] = useState(30);
  const TESTS_PER_LOAD = 30;
  
  // ‚úÖ NUEVO: B√∫squeda mejorada con fallback
  const [lastSearchTerm, setLastSearchTerm] = useState('');
  const [showSearchInFirestore, setShowSearchInFirestore] = useState(false);
  const [isSearching, setIsSearching] = useState(false);
  
  // üåê NUEVO: Detector de conexi√≥n offline
  const { isOnline, wasOffline } = useOnlineStatus();

  // Cargar todos los tests UNA SOLA VEZ con sincronizaci√≥n incremental
  // üåê OPTIMIZADO: Modo offline - Carga cache local primero, sincroniza solo si hay conexi√≥n
  // üîÑ H√çBRIDO: Sistema dual que lee de √≠ndice h√≠brido + Firebase legacy
  const loadAllTests = async () => {
    if (!instance) {
      console.error('No hay sesi√≥n MSAL activa');
      return;
    }

    setIsLoading(true);
    try {
      // 1. Mostrar cache local INMEDIATAMENTE (funciona offline)
      const cachedTests = await getAllTestsLocally();
      console.log(`üì¶ ${cachedTests.length} tests cargados desde cache local`);
      console.log(`üìä workMode actual al cargar: ${workMode}`);
      setAllTests(cachedTests);
      filterTests(cachedTests, showAll);
      setIsLoading(false);  // ‚úÖ UI lista de inmediato
      
      // 2. üåê Sincronizar cambios SOLO si hay conexi√≥n
      if (isOnline) {
        try {
          // üîÑ SISTEMA DUAL: Lee de √≠ndice h√≠brido + Firebase legacy
          const allTestsHybrid = await loadTestsHybridDual(instance, loginRequest.scopes);
          console.log(`üåê ${allTestsHybrid.length} tests sincronizados desde servidor`);
          console.log(`üìä workMode al sincronizar: ${workMode}`);
          
          setAllTests(allTestsHybrid);
          filterTests(allTestsHybrid, showAll);
          
        } catch (syncError) {
          // Fallback: Seguir con datos locales
        }
      }
      
    } catch (error: any) {
      setIsLoading(false);
      alert(`‚ùå Error: ${error.message}`);
    }
  };

  // WorkMode fijo, no requiere persistencia

  // Filtrar tests en memoria (MUY R√ÅPIDO)
  const filterTests = (testsArray: ResistanceTest[], showCompleted: boolean) => {
    console.log(`üìä Filtrando ${testsArray.length} tests para workMode: ${workMode}`);
    console.log(`üìã Tests disponibles:`, testsArray.map(t => ({ id: t.id, lotNumber: t.lotNumber, testType: t.testType })));
    
    let filtered = testsArray;
    
    // 1Ô∏è‚É£ Filtrar por tipo de resistencia (workMode)
    const beforeTypeFilter = filtered.length;
    filtered = filtered.filter(t => {
      const matches = t.testType === workMode;
      if (!matches) {
        console.log(`  ‚ùå Test ${t.lotNumber} no coincide: ${t.testType} !== ${workMode}`);
      }
      return matches;
    });
    console.log(`  üìå Despu√©s de filtro por tipo: ${filtered.length}/${beforeTypeFilter} (workMode: ${workMode})`);
    
    // Mostrar tipos en allTests para depuraci√≥n
    const types = testsArray.map(t => t.testType).filter((v, i, a) => a.indexOf(v) === i);
    console.log(`  üîç Tipos disponibles:`, types);
    
    // 2Ô∏è‚É£ Filtrar por estado (completadas o en progreso)
    if (showCompleted) {
      // Mostrar todas (completadas + en progreso) del tipo actual
    } else {
      // Solo mostrar en progreso del tipo actual
      const beforeCompleteFilter = filtered.length;
      filtered = filtered.filter(t => !t.isCompleted);
      console.log(`  ‚úÖ Despu√©s de filtro completadas: ${filtered.length}/${beforeCompleteFilter}`);
    }
    
    console.log(`üìä Tests filtrados:`, filtered.map(t => ({ id: t.id, lotNumber: t.lotNumber, testType: t.testType, isCompleted: t.isCompleted })));
    
    setTests(filtered);
    // ‚úÖ Resetear contador de visibles al filtrar
    setVisibleCount(TESTS_PER_LOAD);
    
    console.log(`‚úÖ Resultado final: ${filtered.length} tests visibles`);
  };
  
  // üî• CR√çTICO FIX: Ejecutar filterTests cuando workMode cambia
  // Esto previene que los tests "desaparezcan" cuando el usuario cambia entre tipos
  useEffect(() => {
    if (allTests.length > 0) {
      console.log(`üîÑ Re-filtrando tests porque workMode cambi√≥ a: ${workMode}`);
      console.log(`üìä allTests tiene ${allTests.length} tests`);
      console.log(`üìä showAll es: ${showAll}`);
      filterTests(allTests, showAll);
    } else {
      console.log(`‚ö†Ô∏è No hay tests en allTests para filtrar (length: ${allTests.length})`);
    }
  }, [workMode, showAll]); // ‚Üê Se ejecuta cada vez que workMode o showAll cambian
  
  // üîÑ NUEVO: Funci√≥n helper para guardado dual (h√≠brido + legacy)
  const saveTestDual = async (test: ResistanceTest) => {
    if (!instance) {
      console.error('No hay sesi√≥n MSAL activa para guardado dual');
      // Fallback a guardado legacy
      await saveTestToFirestore(test);
      return;
    }

    try {
      console.log('üîÑ Guardando con sistema dual...');
      const result = await saveTestHybridDual(instance, loginRequest.scopes, test);
      
      if (result.success) {
        console.log('‚úÖ Guardado dual exitoso');
      } else {
        console.warn('‚ö†Ô∏è Guardado dual con advertencias:', result.errors);
      }
    } catch (error) {
      console.error('‚ùå Error en guardado dual, fallback a legacy:', error);
      // Fallback: Guardar solo en legacy
      await saveTestToFirestore(test);
    }
  };
  
  // üöÄ MIGRACI√ìN COMPLETADA - Funci√≥n ya no necesaria (todos los tests migrados)
  // const handleStartMigration = async () => {
  //   if (!instance || !accounts || accounts.length === 0) {
  //     alert('‚ùå Debes iniciar sesi√≥n primero');
  //     return;
  //   }
  //   
  //   try {
  //     console.log('üöÄ Iniciando migraci√≥n manual...');
  //     await migrationService.startManualMigration(instance, loginRequest.scopes);
  //     console.log('‚úÖ Migraci√≥n completada');
  //     await loadAllTests();
  //     alert('‚úÖ Migraci√≥n completada exitosamente');
  //   } catch (error) {
  //     console.error('‚ùå Error en migraci√≥n:', error);
  //     alert('Error: ' + (error as any).message);
  //   }
  // };
  
  // ‚úÖ NUEVO: Cargar m√°s tests (infinite scroll)
  const loadMoreTests = () => {
    setVisibleCount(prev => Math.min(prev + TESTS_PER_LOAD, tests.length));
  };

  // ‚úÖ MEJORADO: B√∫squeda con fallback a Firestore
  const handleSearch = async (searchTerm: string) => {
    if (!searchTerm.trim()) {
      filterTests(allTests, showAll);
      setShowSearchInFirestore(false);
      setLastSearchTerm('');
      return;
    }
    
    setIsSearching(true);
    setLastSearchTerm(searchTerm);
    
    try {
      // Buscar primero en cache local (funciona offline)
      const results = await searchTests(searchTerm, false);
      setTests(results);
      
      // Si no encuentra nada Y hay conexi√≥n, mostrar bot√≥n para buscar en Firestore
      if (results.length === 0) {
        if (isOnline) {
          setShowSearchInFirestore(true);
        } else {
          // Si est√° offline, informar que solo busc√≥ en local
          alert('üì¥ Sin conexi√≥n - Solo se busc√≥ en las √∫ltimas 50 resistencias guardadas localmente');
        }
      } else {
        setShowSearchInFirestore(false);
      }
      
      setVisibleCount(TESTS_PER_LOAD); // Resetear contador
    } catch (error: any) {
      alert(`‚ùå Error en b√∫squeda: ${error.message}`);
    } finally {
      setIsSearching(false);
    }
  };
  
  // ‚úÖ NUEVO: Buscar en hist√≥rico completo de Firestore
  const searchInFullHistory = async () => {
    if (!lastSearchTerm) return;
    
    // Verificar conexi√≥n antes de intentar b√∫squeda en Firestore
    if (!isOnline) {
      alert('üì¥ Sin conexi√≥n - No se puede buscar en el hist√≥rico completo. Conecta a internet para acceder a todos los datos.');
      return;
    }
    
    setIsSearching(true);
    try {
      const results = await searchTests(lastSearchTerm, true); // ‚úÖ Buscar en Firestore
      setTests(results);
      setShowSearchInFirestore(false);
      
      if (results.length === 0) {
        alert('‚ùå No se encontraron resistencias con ese criterio en todo el hist√≥rico');
      } else {
        alert(`‚úÖ Se encontraron ${results.length} resistencias en el hist√≥rico completo`);
      }
      
      setVisibleCount(TESTS_PER_LOAD);
    } catch (error: any) {
      alert(`‚ùå Error buscando en hist√≥rico: ${error.message}`);
    } finally {
      setIsSearching(false);
    }
  };

  // Cargar al inicio UNA SOLA VEZ
  useEffect(() => {
    loadAllTests();
  }, []);

  // üîÑ NUEVO: Iniciar migraci√≥n en background (no bloquea la app)
  useEffect(() => {
    if (!instance || !isOnline) {
      return; // Esperar a tener sesi√≥n y conexi√≥n
    }

    // Verificar que hay una cuenta activa MSAL antes de iniciar migraci√≥n
    if (!accounts || accounts.length === 0) {
      console.log('‚è∏Ô∏è Esperando autenticaci√≥n MSAL para iniciar migraci√≥n...');
      return; // No hay cuenta activa todav√≠a
    }

    // ‚úÖ MIGRACI√ìN COMPLETADA - Ya no es necesario migrar en background
    // Todos los tests ya est√°n en el sistema h√≠brido
    // const startMigration = async () => {
    //   try {
    //     console.log('üöÄ Iniciando migraci√≥n en background...');
    //     await migrationService.startBackgroundMigration(instance, loginRequest.scopes);
    //     
    //     console.log('‚úÖ Migraci√≥n completada - Recargando tests...');
    //     await loadAllTests();
    //   } catch (error) {
    //     console.error('‚ö†Ô∏è Error en migraci√≥n (datos legacy seguros):', error);
    //   }
    // };
    // const migrationTimer = setTimeout(startMigration, 5000);
    // return () => clearTimeout(migrationTimer);
  }, [instance, isOnline, accounts]);

  // Filtrar cuando cambie showAll o workMode (INSTANT√ÅNEO, sin llamada a Firestore)
  useEffect(() => {
    filterTests(allTests, showAll);
  }, [showAll, workMode]);

  // üÜï Sincronizar datos pendientes al iniciar la app (SOLO si hay conexi√≥n)
  useEffect(() => {
    const syncOnStartup = async () => {
      if (!isOnline) {
        console.log('üì¥ Sin conexi√≥n - Omitiendo sincronizaci√≥n inicial');
        return;
      }
      
      try {
        const { syncPendingData } = await import('../lib/firestoreService');
        const syncedCount = await syncPendingData();
        if (syncedCount > 0) {
          console.log(`üîÑ ${syncedCount} tests sincronizados al inicio`);
          // Recargar tests despu√©s de sincronizar
          loadAllTests();
        }
      } catch (error) {
        console.error('‚ùå Error en sincronizaci√≥n inicial:', error);
      }
    };

    syncOnStartup();
  }, []); // Solo al montar el componente

  // üåê NUEVO: Sincronizar cuando vuelva la conexi√≥n
  useEffect(() => {
    if (wasOffline) {
      console.log('üîÑ Conexi√≥n restaurada - Sincronizando datos pendientes...');
      const syncAfterReconnect = async () => {
        try {
          const { syncPendingData } = await import('../lib/firestoreService');
          const syncedCount = await syncPendingData();
          if (syncedCount > 0) {
            console.log(`‚úÖ ${syncedCount} tests sincronizados despu√©s de reconectar`);
          }
          // Recargar todos los datos
          loadAllTests();
        } catch (error) {
          console.error('‚ùå Error en sincronizaci√≥n post-reconexi√≥n:', error);
        }
      };
      
      syncAfterReconnect();
    }
  }, [wasOffline]); // Se ejecuta cuando wasOffline cambia a true

  const handleSetRoute = (newRoute: string, params: any = null) => {
    setRoute(newRoute);
    setRouteParams(params);
  };

  const renderContent = () => {
    switch (route) {
      case 'new-test':
        return <NewTestPage setRoute={handleSetRoute} onTestCreated={loadAllTests} saveTestFn={saveTestDual} workMode={workMode} userName={user?.name || "Usuario"} />;
      case 'test-detail':
        const test = tests.find(t => t.id === routeParams.id);
        if (test) return <TestDetailPage test={test} setRoute={handleSetRoute} onTestUpdated={loadAllTests} saveTestFn={saveTestDual} />;
        return <p>Test no encontrado</p>;
      default:
        return <ResistanceTestList setRoute={handleSetRoute} tests={tests} isLoading={isLoading} onRefresh={loadAllTests} onSearch={handleSearch} showAll={showAll} setShowAll={setShowAll} userName={user?.name || "Usuario"} visibleCount={visibleCount} loadMoreTests={loadMoreTests} showSearchInFirestore={showSearchInFirestore} searchInFullHistory={searchInFullHistory} isSearching={isSearching} />;
    }
  };

  return (
    <div className="min-h-screen w-full bg-gray-50 dark:bg-gray-950">
      {/* üåê Banner de estado offline/online */}
      <OfflineBanner isOnline={isOnline} wasOffline={wasOffline} />
      
      {/* üîÑ Banner de progreso de migraci√≥n - YA NO NECESARIO (migraci√≥n completada) */}
      {/* <MigrationStatusBanner /> */}
      
      {/* Header universal - Optimizado para m√≥vil */}
      <div className="bg-white dark:bg-gray-900 border-b dark:border-gray-800 sticky top-0 z-50 shadow-sm">
        <div className="max-w-7xl mx-auto">
          {/* Fila 1: Usuario y Cerrar Sesi√≥n - Ultra compacta */}
          <div className="flex items-center justify-between px-2.5 py-1 border-b dark:border-gray-700">
            <div className="flex items-center gap-1 text-xs text-gray-700 dark:text-gray-300">
              <User className="h-3 w-3" />
              <span className="font-medium truncate max-w-[100px] sm:max-w-none">{user?.name?.split(' ')[0] || "Lab"}</span>
            </div>
            <button
              onClick={() => logout()}
              className="text-red-500 dark:text-red-400 hover:text-red-600 dark:hover:text-red-300 transition-colors p-0.5"
              title="Cerrar Sesi√≥n"
            >
              <LogOut className="h-3 w-3" />
            </button>
          </div>
          
          {/* Fila 2: Navegaci√≥n - Lado a lado */}
          <div className="flex gap-2 px-2 py-2 sm:py-2.5">
            <button 
              onClick={() => handleSetRoute('dashboard')} 
              className={`flex-1 flex items-center justify-center gap-1.5 px-3 py-2 text-xs sm:text-sm font-semibold rounded-lg transition-all ${
                route === 'dashboard' 
                  ? 'bg-blue-600 dark:bg-blue-600 text-white shadow-md hover:bg-blue-700 dark:hover:bg-blue-700' 
                  : 'bg-gray-100 dark:bg-gray-800 text-gray-700 dark:text-gray-300 hover:bg-blue-50 dark:hover:bg-blue-900/30 hover:text-blue-600 dark:hover:text-blue-400'
              }`}
            >
              <Home className="h-4 w-4 flex-shrink-0" />
              <span className="whitespace-nowrap">Dashboard</span>
            </button>
            <button 
              onClick={() => handleSetRoute('new-test')} 
              className={`flex-1 flex items-center justify-center gap-1.5 px-3 py-2 text-xs sm:text-sm font-semibold rounded-lg transition-all ${
                route === 'new-test' 
                  ? 'bg-green-600 dark:bg-green-600 text-white shadow-md hover:bg-green-700 dark:hover:bg-green-700' 
                  : 'bg-gray-100 dark:bg-gray-800 text-gray-700 dark:text-gray-300 hover:bg-green-50 dark:hover:bg-green-900/30 hover:text-green-600 dark:hover:text-green-400'
              }`}
            >
              <PlusCircle className="h-4 w-4 flex-shrink-0" />
              <span className="whitespace-nowrap hidden sm:inline">Nueva Resistencia</span>
              <span className="whitespace-nowrap sm:hidden">Nueva</span>
            </button>
          </div>
        </div>
      </div>

      {/* Main content - Centrado en desktop */}
      <div className="flex flex-col w-full min-w-0 items-center">
        {/* Main content con padding responsive y centrado - Min height solo cuando est√° vac√≠o */}
        <main className="flex-1 p-3 sm:p-4 lg:p-6 xl:p-8 w-full min-w-0 max-w-7xl overflow-x-hidden h-auto">
          {renderContent()}
        </main>
      </div>
    </div>
  );
};

